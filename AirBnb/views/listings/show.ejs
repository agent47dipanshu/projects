<%layout("layouts/boilerplate.ejs")%>
     <div class="row mt-3">
          <div class="col-8 offset-3 my-2">
               <h3><b><%= listing.title %></b></h3>
          </div>
          <div class="listing-card col-6 offset-3 show-card">
               <img src="<%=listing.image%>" alt="listing_image" class="card-img-top show-img">
               <div class="card-body">
                    <p class="card-text mt-3">
                         <%= listing.description %> <br>
                              &#x20B9;<%= listing.price.toLocaleString() %> <br>
                                   <%= listing.location %> <br>
                                   <%= listing.country %>
                    </p>
               </div>
          </div>
     </div>
     <div class="btns mb-3">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3">Edit</a>
          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
               <button class="btn btn-dark offset-2">Delete</button>
          </form>
     </div>
     <div class="col-8 offset-3 my-2">
          <hr>
          <h4>Leave a Review</h4>
          <form action="/listings/<%= listing._id %>/reviews" method="post" novalidate class="needs-validation">
               <div class="">
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" class="form-range" name="review[rating]" id="rating" min="1" max="5">
               </div>
               <div>
                    <label for="comment" class="form-label">Comment</label>
                    <br>
                    <textarea type="text" class="form-control" required rows="5" cols="30" name="review[comment]" id="comment"></textarea>
                    <div class="invalid-feedback">Please add some comments for Review.</div>
               </div>
               <button class="btn btn-outline-dark my-3">Submit</button>
          </form>
          <hr>
          <p><b>All Reviews</b></p>
          <div class="row">
               <% for (review of listing.reviews){%>
                    <div class="card col-5 ms-3 mt-2">
                         <div class="car-body">
                              <h5 class="card-title">AgenT47</h5>
                              <p class="card-text"><%= review.comment %></p>
                              <p class="card-text"><%= review.rating %>-stars</p>
                         </div>
                         <form method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                              <button class="btn btn-dark btn-sm my-3">Delete</button>
                         </form>
                    </div>
                    <% } %>
               </div>
          </div>